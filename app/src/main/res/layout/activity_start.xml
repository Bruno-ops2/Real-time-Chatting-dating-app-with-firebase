<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.StartActivity">


    <ImageView
        android:id="@+id/imageStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlackAlpha"
        android:orientation="vertical"
        android:padding="20dp">


        <Button
            android:id="@+id/buttonStartFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_capsule"
            android:backgroundTint="@color/colorFacebook"
            android:text="@string/loginwithfacebook"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:id="@+id/buttonStartEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_capsule"
            android:backgroundTint="@color/colorPrimary"
            android:text="Login With Email"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15ssp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="By logging in you agree to FireDate's Terms of Service and Privacy Policy."
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />


    </LinearLayout>

</RelativeLayout>